int digitsProduct(int product) {
	if (product)
	{
		int sum = 0;
		int multiplicand = 1;
		int i;
		bool found;
		while (product > 9)
		{
			found = false;
			for (i = 9; i != 1 && !found; --i)
			{
				if (product % i == 0)
				{
                    sum += i * multiplicand;
                    multiplicand *= 10;
					product /= i;
					found = true;
				}
			}
			if (i == 1)
			{
				return -1;
			}
		}
		return product * multiplicand + sum;
	}
	return 10;
}
